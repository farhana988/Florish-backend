model User {
    id                 String     @id @default(uuid())
    name               String     
    email              String     @unique
    password           String
    profilePhoto       String?
    isBlocked          Boolean    @default(false) 
    role               UserRole   @default(USER)
    needPasswordChange Boolean    @default(true)
    createdAt          DateTime   @default(now())
    updatedAt          DateTime   @updatedAt

    plants             Plant[]   
    cart               Cart? 
    wishlist           Wishlist?
    orders             Order[] 
    address            Address?   

    @@map("users")
}